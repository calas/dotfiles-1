# Set default values
defaults
logfile ~/.msmtp.log
protocol smtp
auth on
tls on
tls_starttls on

account egi
host smtp.gmail.com
port 587
from baptiste.grenier@egi.eu
user baptiste.grenier@egi.eu
passwordeval ~/bin/gnomekeyring-helpers.py -g -u baptiste.grenier@egi.eu -e smtp.gmail.com -p smtps -a msmtp
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account perso
host smtp.bapt.name
port 587
from baptiste@bapt.name
user baptiste
passwordeval ~/bin/gnomekeyring-helpers.py -g -u baptiste -e smtp.bapt.name -p smtps -a msmtp
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account default: perso
