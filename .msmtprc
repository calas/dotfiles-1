# Set default values
defaults
logfile ~/.msmtp.log
protocol smtp
auth on
tls on
tls_starttls on

account egi
host smtp.gmail.com
port 587
from baptiste.grenier@egi.eu
user baptiste.grenier@egi.eu
# Adding password to gnome keyring
# ~/bin/msmtp-gnome-tool.py -s -u baptiste.grenier@egi.eu -e smtp.gmail.com
passwordeval ~/bin/msmtp-gnome-tool.py -g --username baptiste.grenier@egi.eu --server smtp.gmail.com
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account perso
host smtp.bapt.name
port 587
from baptiste@bapt.name
user baptiste
# Adding password to gnome keyring
# ~/bin/msmtp-gnome-tool.py -s -u baptiste -e smtp.bapt.name
passwordeval ~/bin/msmtp-gnome-tool.py -g --username baptiste --server smtp.bapt.name
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account default: perso
