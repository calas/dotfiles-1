gg()
{
  outfile="/tmp/gg-${USER}"
  q="$(echo $@ | sed 's/ /+/g')"
  s_umask=`umask`
  umask 077
  lynx -dump -listonly -hiddenlinks=ignore http://google.fr/search\?q="${q}" | awk ' \
  BEGIN { \
    n = 0; \
  } \
  $1 ~ /[[:digit:]]+\./ && $2 !~ /http:\/\/([[:alpha:]][[:alnum:]]+\.google|[[:digit:]]+\.[[:digit:]]+\.[[:digit:]]+\.[[:digit:]]+\/search)/ { \
    print "alias g"n"=\"epiphany -n \\\""$2"\\\"\""; \
    print "printf \"%4d. %s\\n\" "n" \""$2"\""; \
    n++ \
  } ' > "${outfile}"
  s_umask=$s_umask
  . "${outfile}"
  rm "${outfile}"
}

fix_mpd_db_rights()
{
  sudo chown -R baptiste:mpd ~/Musique/
  sudo find ~/Musique/ -type d -exec chmod ug+rwx {} \;
  sudo find ~/Musique/ -type f -exec chmod ug+rw {} \;
  mpc update
}
